@model E_Project.Models.Data.Programmes

@{
    ViewData["Title"] = "DetailsProgrammes";
}

<h1>DetailsProgrammes</h1>

<div>
    <h4>Programmes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProgrammeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProgrammeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProgStartDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProgStartDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProgEndDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProgEndDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProgrammeIMG)
        </dt>
        <dd class = "col-sm-10">
            <img src="~/Content/Images/@Html.DisplayFor(model => model.ProgrammeIMG)" width="120" height="120" class="rounded-circle" alt="..." />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="EditProgrammes" asp-route-id="@Model.ProgrammeID" class="btn btn-success mt-2">Edit</a> |
    <a asp-action="ViewProgrammes" class="btn btn-primary mt-2">Back to List</a>
</div>
